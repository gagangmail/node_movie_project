<form action="/movies/update" method="POST">
<table>
    <tr>
        <td><b>Select Option</b></td>
        <td><b>Movie Title</b></td>
        <td><b>Movie Language</b></td>
        <td><b>Movie Director</b></td>
        <td><b>Date Released</b></td>
        <td><b> Budget</b></td>
        <td><b>Movie Cast</b></td>
    </tr>
    {{#each data}}

    <tr>
        <td><input type="radio" name=selectedOption id=selectedOption value={{this.title}} /></td>
        <td>{{this.title}}</td>
        <td>{{this.language}}</td>
        <td>{{this.director}}</td>
        <td>{{this.date_released}}</td>
        <td>{{this.budget}}</td>
        <td>{{this.cast}}</td>
    </tr>
    {{/each}}
</table>
    <button type="submit">Update Movie</button>
</form>
